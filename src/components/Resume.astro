<section id="resume" class="section-container bg-dark-bg">
  <div class="w-full max-w-7xl mx-auto text-center">
    <h2 class="section-title mb-4">Resume</h2>
    <p class="section-subtitle mb-12">
      Download my resume in your preferred format
    </p>

    <div class="flex flex-col sm:flex-row gap-6 justify-center">
      <a
        href="/resume.pdf"
        download
        class="card hover:border-accent-primary transition-all duration-300 group"
      >
        <div class="flex flex-col items-center">
          <svg class="w-16 h-16 mb-4 text-accent-primary group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
          <h3 class="text-xl font-bold mb-2 text-white">PDF Format</h3>
          <p class="text-gray-300 text-sm">Download PDF resume</p>
        </div>
      </a>

      <a
        href="/resume.docx"
        download
        class="card hover:border-accent-primary transition-all duration-300 group"
      >
        <div class="flex flex-col items-center">
          <svg class="w-16 h-16 mb-4 text-accent-primary group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
          <h3 class="text-xl font-bold mb-2 text-white">DOCX Format</h3>
          <p class="text-gray-300 text-sm">Download DOCX resume</p>
        </div>
      </a>
    </div>
  </div>
</section>

