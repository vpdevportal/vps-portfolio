---
import { resumeData } from '../data/resume';
---

<section id="experience" class="section-container bg-dark-bg/50 relative">
  <div class="w-full max-w-7xl mx-auto">
    <div class="text-center mb-16 fade-in-up">
      <h2 class="section-title gradient-text">Experience</h2>
      <p class="section-subtitle">
        My professional journey
      </p>
    </div>

    {resumeData.experience.length > 0 ? (
      <div class="space-y-8 relative">
        <!-- Timeline line -->
        <div class="hidden md:block absolute left-8 top-0 bottom-0 w-0.5 bg-gradient-to-b from-accent-primary via-accent-secondary to-accent-tertiary"></div>
        
        {resumeData.experience.map((exp, index) => (
          <div class="relative fade-in-up" style={`animation-delay: ${index * 100}ms`}>
            <div class="flex flex-col md:flex-row gap-6">
              <!-- Timeline dot -->
              <div class="hidden md:flex items-start pt-2">
                <div class="relative z-10 w-4 h-4 rounded-full bg-gradient-to-r from-accent-primary to-accent-tertiary border-4 border-dark-bg shadow-lg"></div>
              </div>
              
              <!-- Content card -->
              <div class="flex-1 glass-card group hover:scale-[1.02] transition-all duration-300">
                <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-4 gap-4">
                  <div class="flex-1">
                    <h3 class="text-2xl font-bold mb-2 gradient-text">{exp.role}</h3>
                    <p class="text-xl text-gray-300 mb-2">{exp.company}</p>
                  </div>
                  <div class="px-4 py-2 rounded-lg bg-white/5 border border-white/10 text-gray-300 text-sm md:text-base font-medium">
                    {exp.startDate} - {exp.endDate}
                  </div>
                </div>
                
                {exp.description.length > 0 && (
                  <ul class="space-y-3 mt-4">
                    {exp.description.map((desc) => (
                      <li class="text-gray-300 flex items-start group/item">
                        <span class="text-accent-primary mr-3 mt-1.5 flex-shrink-0">
                          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                          </svg>
                        </span>
                        <span class="flex-1">{desc}</span>
                      </li>
                    ))}
                  </ul>
                )}
                
                {exp.achievements && exp.achievements.length > 0 && (
                  <div class="mt-6 pt-6 border-t border-white/10">
                    <h4 class="text-sm font-semibold text-gray-400 mb-3 uppercase tracking-wide">Key Achievements</h4>
                    <div class="grid sm:grid-cols-2 gap-3">
                      {exp.achievements.map((achievement) => (
                        <div class="flex items-start gap-2 p-3 rounded-lg bg-white/5 border border-white/5 hover:border-accent-primary/50 transition-colors">
                          <span class="text-accent-primary mt-0.5 flex-shrink-0">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                          </span>
                          <span class="text-gray-300 text-sm">{achievement}</span>
                        </div>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    ) : (
      <div class="text-center py-12 fade-in-up">
        <div class="glass-card max-w-md mx-auto">
          <p class="text-gray-400">Experience information will be displayed here once extracted from your resume.</p>
        </div>
      </div>
    )}
  </div>
</section>
