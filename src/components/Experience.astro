---
import { resumeData } from '../data/resume';
---

<section id="experience" class="section-container bg-dark-bg">
  <div class="w-full max-w-7xl mx-auto">
    <h2 class="section-title text-center mb-4">Experience</h2>
    <p class="section-subtitle text-center mb-12">
      My professional journey
    </p>

    {resumeData.experience.length > 0 ? (
      <div class="space-y-8">
        {resumeData.experience.map((exp, index) => (
          <div class="card hover:border-accent-primary/50 transition-all duration-300">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-4">
              <div>
                <h3 class="text-2xl font-bold mb-2 gradient-text">{exp.role}</h3>
                <p class="text-xl text-gray-300 mb-2">{exp.company}</p>
              </div>
              <div class="text-gray-400 text-sm md:text-base">
                {exp.startDate} - {exp.endDate}
              </div>
            </div>
            
            {exp.description.length > 0 && (
              <ul class="space-y-2 mt-4">
                {exp.description.map((desc) => (
                  <li class="text-gray-300 flex items-start">
                    <span class="text-accent-primary mr-2">•</span>
                    <span>{desc}</span>
                  </li>
                ))}
              </ul>
            )}
            
            {exp.achievements && exp.achievements.length > 0 && (
              <div class="mt-4 pt-4 border-t border-gray-900">
                <h4 class="text-sm font-semibold text-gray-400 mb-2">Key Achievements:</h4>
                <ul class="space-y-2">
                  {exp.achievements.map((achievement) => (
                    <li class="text-gray-300 flex items-start">
                      <span class="text-accent-primary mr-2">✓</span>
                      <span>{achievement}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-400">Experience information will be displayed here once extracted from your resume.</p>
      </div>
    )}
  </div>
</section>

