---
import { resumeData } from '../data/resume';
---

<section id="skills" class="section-container relative">
  <div class="w-full max-w-7xl mx-auto">
    <div class="text-center mb-16 fade-in-up">
      <h2 class="section-title gradient-text">Skills & Technologies</h2>
      <p class="section-subtitle">
        Technologies I work with
      </p>
    </div>

    {resumeData.skills.length > 0 ? (
      <div class="flex flex-wrap gap-4 md:gap-6 justify-center items-center px-4">
        {resumeData.skills.map((skill, index) => (
          <div 
            class="group relative fade-in-up mb-2"
            style={`animation-delay: ${index * 50}ms`}
          >
            <div class="absolute -inset-1 bg-gradient-to-r from-accent-primary via-accent-secondary to-accent-tertiary rounded-full blur opacity-0 group-hover:opacity-50 transition-opacity duration-300"></div>
            <span class="relative inline-block px-6 py-3 rounded-full glass-card border border-white/10 text-gray-300 hover:text-white hover:border-accent-primary/50 transition-all duration-300 hover:scale-110 cursor-default whitespace-nowrap">
              {skill}
            </span>
          </div>
        ))}
      </div>
    ) : (
      <div class="text-center py-12 fade-in-up">
        <p class="text-gray-300 mb-8 text-lg">Skills will be displayed here once extracted from your resume.</p>
        <div class="flex flex-wrap gap-4 md:gap-6 justify-center items-center px-4">
          {['JavaScript', 'TypeScript', 'React', 'Node.js', 'Python', 'AWS', 'Docker', 'Kubernetes'].map((skill, index) => (
            <div 
              class="group relative fade-in-up mb-2"
              style={`animation-delay: ${index * 50}ms`}
            >
              <div class="absolute -inset-1 bg-gradient-to-r from-accent-primary via-accent-secondary to-accent-tertiary rounded-full blur opacity-0 group-hover:opacity-50 transition-opacity duration-300"></div>
              <span class="relative inline-block px-6 py-3 rounded-full glass-card border border-white/10 text-gray-300 hover:text-white hover:border-accent-primary/50 transition-all duration-300 hover:scale-110 cursor-default whitespace-nowrap">
                {skill}
              </span>
            </div>
          ))}
        </div>
      </div>
    )}
  </div>
</section>
