---
import { resumeData } from '../data/resume';

const navItems = [
  { label: 'Home', href: '#home' },
  { label: 'About', href: '#about' },
  { label: 'Experience', href: '#experience' },
  { label: 'Skills', href: '#skills' },
  { label: 'Resume', href: '#resume' },
  { label: 'Contact', href: '#contact' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-dark-surface/80 backdrop-blur-md border-b border-gray-800">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <a href="#home" class="text-xl font-bold gradient-text">
        {resumeData.personalInfo.name || 'Portfolio'}
      </a>
      
      <div class="hidden md:flex items-center space-x-8">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="text-gray-300 hover:text-accent-primary transition-colors duration-200"
          >
            {item.label}
          </a>
        ))}
      </div>

      <button
        id="mobile-menu-button"
        class="md:hidden text-gray-300 hover:text-accent-primary"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>

  <div id="mobile-menu" class="hidden md:hidden bg-dark-surface border-t border-gray-800">
    <div class="px-4 py-4 space-y-4">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="block text-gray-300 hover:text-accent-primary transition-colors duration-200"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }

  // Close mobile menu when clicking a link
  const mobileLinks = document.querySelectorAll('#mobile-menu a');
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>

