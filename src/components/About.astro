---
import { resumeData } from '../data/resume';
---

<section id="about" class="section-container">
  <div class="w-full max-w-7xl mx-auto">
    <h2 class="section-title text-center mb-4">About Me</h2>
    <p class="section-subtitle text-center mb-12">
      Get to know me better
    </p>

    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="flex justify-center">
        <img
          src="/profile.png"
          alt={resumeData.personalInfo.name}
          class="w-64 h-64 rounded-full object-cover border-4 border-accent-primary shadow-lg shadow-accent-primary/20"
        />
      </div>

      <div class="space-y-6">
        <div>
          <h3 class="text-2xl font-bold mb-4 gradient-text">
            {resumeData.personalInfo.name || 'Your Name'}
          </h3>
          <p class="text-gray-300 leading-relaxed mb-4">
            {resumeData.personalInfo.title || 'Software Developer'} passionate about creating
            innovative solutions and building impactful applications.
          </p>
          <p class="text-gray-300 leading-relaxed">
            With a strong foundation in modern web technologies and a commitment to
            continuous learning, I strive to deliver high-quality software that makes a difference.
          </p>
        </div>

        <div class="grid grid-cols-2 gap-4 pt-4">
          {resumeData.personalInfo.email && (
            <div>
              <p class="text-sm text-gray-500 mb-1">Email</p>
              <a href={`mailto:${resumeData.personalInfo.email}`} class="text-accent-primary hover:underline">
                {resumeData.personalInfo.email}
              </a>
            </div>
          )}
          {resumeData.personalInfo.phone && (
            <div>
              <p class="text-sm text-gray-500 mb-1">Phone</p>
              <a href={`tel:${resumeData.personalInfo.phone}`} class="text-accent-primary hover:underline">
                {resumeData.personalInfo.phone}
              </a>
            </div>
          )}
          {resumeData.personalInfo.location && (
            <div>
              <p class="text-sm text-gray-500 mb-1">Location</p>
              <p class="text-gray-300">{resumeData.personalInfo.location}</p>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</section>

