---
import { resumeData } from '../data/resume';
---

<footer class="bg-dark-bg/80 backdrop-blur-xl border-t border-white/10 relative">
  <div class="section-container">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
      <div class="fade-in-up">
        <h3 class="text-2xl font-bold mb-4 gradient-text">
          {resumeData.personalInfo.name || 'Portfolio'}
        </h3>
        <p class="text-gray-300 text-lg">
          {resumeData.personalInfo.title || 'Software Developer'}
        </p>
        <p class="text-gray-400 mt-4 text-sm">
          Crafting digital experiences with passion and innovation
        </p>
      </div>

      <div class="fade-in-up animate-delay-200">
        <h4 class="text-lg font-semibold mb-6 text-white">Quick Links</h4>
        <ul class="space-y-3">
          <li><a href="#about" class="text-gray-300 hover:text-white hover:gradient-text transition-all duration-300 inline-block hover:translate-x-1">About</a></li>
          <li><a href="#experience" class="text-gray-300 hover:text-white hover:gradient-text transition-all duration-300 inline-block hover:translate-x-1">Experience</a></li>
          <li><a href="#skills" class="text-gray-300 hover:text-white hover:gradient-text transition-all duration-300 inline-block hover:translate-x-1">Skills</a></li>
          <li><a href="#contact" class="text-gray-300 hover:text-white hover:gradient-text transition-all duration-300 inline-block hover:translate-x-1">Contact</a></li>
        </ul>
      </div>

      <div class="fade-in-up animate-delay-300">
        <h4 class="text-lg font-semibold mb-6 text-white">Connect</h4>
        <div class="flex flex-wrap gap-3">
          {resumeData.personalInfo.linkedin && (
            <a
              href={resumeData.personalInfo.linkedin.startsWith('http') ? resumeData.personalInfo.linkedin : `https://${resumeData.personalInfo.linkedin}`}
              target="_blank"
              rel="noopener noreferrer"
              class="group w-12 h-12 rounded-xl bg-gradient-to-r from-blue-500 to-blue-600 flex items-center justify-center hover:scale-110 transition-all duration-300 shadow-lg hover:shadow-blue-500/50"
              aria-label="LinkedIn"
            >
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          )}
          {resumeData.personalInfo.github && (
            <a
              href={resumeData.personalInfo.github.startsWith('http') ? resumeData.personalInfo.github : `https://${resumeData.personalInfo.github}`}
              target="_blank"
              rel="noopener noreferrer"
              class="group w-12 h-12 rounded-xl bg-gradient-to-r from-gray-700 to-gray-900 flex items-center justify-center hover:scale-110 transition-all duration-300 shadow-lg hover:shadow-gray-500/50"
              aria-label="GitHub"
            >
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
              </svg>
            </a>
          )}
          {resumeData.personalInfo.facebook && (
            <a
              href={resumeData.personalInfo.facebook.startsWith('http') ? resumeData.personalInfo.facebook : `https://${resumeData.personalInfo.facebook}`}
              target="_blank"
              rel="noopener noreferrer"
              class="group w-12 h-12 rounded-xl bg-gradient-to-r from-blue-600 to-blue-700 flex items-center justify-center hover:scale-110 transition-all duration-300 shadow-lg hover:shadow-blue-500/50"
              aria-label="Facebook"
            >
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          )}
          {resumeData.personalInfo.instagram && (
            <a
              href={resumeData.personalInfo.instagram.startsWith('http') ? resumeData.personalInfo.instagram : `https://${resumeData.personalInfo.instagram}`}
              target="_blank"
              rel="noopener noreferrer"
              class="group w-12 h-12 rounded-xl bg-gradient-to-r from-pink-500 to-purple-600 flex items-center justify-center hover:scale-110 transition-all duration-300 shadow-lg hover:shadow-pink-500/50"
              aria-label="Instagram"
            >
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          )}
          {resumeData.personalInfo.website && (
            <a
              href={resumeData.personalInfo.website.startsWith('http') ? resumeData.personalInfo.website : `https://${resumeData.personalInfo.website}`}
              target="_blank"
              rel="noopener noreferrer"
              class="group w-12 h-12 rounded-xl bg-gradient-to-r from-accent-primary to-accent-secondary flex items-center justify-center hover:scale-110 transition-all duration-300 shadow-lg hover:shadow-accent-primary/50"
              aria-label="Website"
            >
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>

    <div class="border-t border-white/10 pt-8 text-center fade-in-up">
      <p class="text-gray-400">
        &copy; {new Date().getFullYear()} {resumeData.personalInfo.name || 'Portfolio'}. All rights reserved.
      </p>
      <p class="text-gray-500 text-sm mt-2">
        Built with <span class="gradient-text">passion</span> and modern web technologies
      </p>
    </div>
  </div>
</footer>
